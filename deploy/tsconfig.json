{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./loa-identity",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["loa-identity/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
